@page
@using ProbCut.Models;
@model IndexModel
@{
    ViewData["Title"] = LanguageController.Get(Model.lang, "Index", "Title");
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<body id="bodyIndex">
    <div>
        <br /><br />
        <div id="mainHeading">
            <h1 class="display-4" id="HeadingProbCut">ProbCut</h1>
            <h4 class="HeadingProbCutIs">@LanguageController.Get(Model.lang, "Index", "HeadingProbcutIs")</h4>
            <br /><br />
        </div>

        <!-- 3 cards -->
        <div style="display: flex; justify-content: center; flex-wrap: wrap; text-align: center">
            <div class="card" style="width: 20rem;">
                <img src="~/lib/custom/wallet.png" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@LanguageController.Get(Model.lang, "Index", "Card1Title")</h5>
                    <p class="card-text">@LanguageController.Get(Model.lang, "Index", "Card1Text")</p>
                    <div style="display: flex; justify-content: center; padding-top: 50px;">
                        <button class="btn btn-primary" onclick="location.href='./Cenovnik'" style="position: absolute; bottom: 20px;">@LanguageController.Get(Model.lang, "Index", "ButtonPricing")</button>
                    </div>
                </div>
            </div>

            <div class="card" style="width: 20rem;">
                <img src="~/lib/custom/barber.png" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@LanguageController.Get(Model.lang, "Index", "Card2Title")</h5>
                    <p class="card-text">@LanguageController.Get(Model.lang, "Index", "Card2Text")</p>
                    <button class="btn btn-primary" onclick="location.href='./LogovanMusterija'">@LanguageController.Get(Model.lang, "Index", "ButtonSetAppointment")</button>
                </div>
            </div>

            <div class="card" style="width: 20rem;">
                <img src="~/lib/custom/register.png" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">@LanguageController.Get(Model.lang, "Index", "Card3Title")</h5>
                    <p class="card-text">@LanguageController.Get(Model.lang, "Index", "Card3Text")</p>
                    <button class="btn btn-primary" onclick="location.href='./Register'">@LanguageController.Get(Model.lang, "Index", "ButtonRegister")</button>
                </div>
            </div>
        </div>
    </div>

    <br /><br /><br /><br /><br /><br /><br /><br /><br />

    <div class="text-center">
        <h3 class="card-title" style="font-family: Ubuntu Mono;">@LanguageController.Get(Model.lang, "Index", "HeadingHaircuts")</h3>
    </div>

    <br />

    <!-- gallery -->
    <div style="display: flex; justify-content: center">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="border: 1px solid #c2c2c2; width: 80%;">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active" style="filter: invert(1)"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="1" style="filter: invert(1)"></li>
                <li data-target="#carouselExampleCaptions" data-slide-to="2" style="filter: invert(1)"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/lib/custom/haircut1.png" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block" id="galleryImageCaption">
                        <h5 style="color: black">@LanguageController.Get(Model.lang, "Index", "Haircut1")</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/lib/custom/haircut2.png" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block" id="galleryImageCaption">
                        <h5 style="color: black">@LanguageController.Get(Model.lang, "Index", "Haircut2")</h5>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/lib/custom/haircut3.png" class="d-block w-100">
                    <div class="carousel-caption d-none d-md-block" id="galleryImageCaption">
                        <h5 style="color: black">@LanguageController.Get(Model.lang, "Index", "Haircut3")</h5>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" style="filter: invert(1)" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" style="filter: invert(1)" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <br />

    <div style="text-align: center; display: flex; justify-content: center; align-content: center">
        <p class="card-text" style="width: 60%">
            @LanguageController.Get(Model.lang, "Index", "HaircutsDescription")
        </p>
    </div>

    <br /><br /><br /><br /><br /><br /><br />

    <!-- Cenovnik card -->
    <div style="display: flex; flex-direction: row; align-items: center;">
        <div class="opacityCard" style="width: 50%">
            <img src="~/lib/custom/wallet.png" class="image">
            <div class="middle">
                <div class="text" onclick="location.href='./Cenovnik'" style="cursor: pointer">@LanguageController.Get(Model.lang, "Index", "CardPricingTitle")</div>
            </div>
        </div>

        <div style="width: 50%; margin-left: 15px">
            <h4 class="card-title" style="font-family: Ubuntu Mono;">@LanguageController.Get(Model.lang, "Index", "CardPricingTitle")</h4>
            <p class="card-text">
                @LanguageController.Get(Model.lang, "Index", "CardPricingText")
            </p>
        </div>
    </div>

    <br /><br />

    <!-- Zakazi termin card -->
    <div style="display: flex; flex-direction: row; align-items: center;">
        <div style="width: 50%">
            <h4 class="card-title" style="font-family: Ubuntu Mono;">@LanguageController.Get(Model.lang, "Index", "CardSetAppointmentTitle")</h4>
            <p class="card-text">
                @LanguageController.Get(Model.lang, "Index", "CardSetAppointmentText")
            </p>
        </div>

        <div class="opacityCard" style="width: 50%;">
            <img src="~/lib/custom/barber.png" class="image">
            <div class="middle">
                <div class="text" onclick="location.href='./LogovanMusterija'" style="cursor: pointer">@LanguageController.Get(Model.lang, "Index", "ButtonSetAppointment")</div>
            </div>
        </div>
    </div>

    <br /><br />

    <!-- Registruj se card -->
    <div style="display: flex; flex-direction: row; align-items: center;">
        <div class="opacityCard" style="width: 50%">
            <img src="~/lib/custom/register.png" class="image">
            <div class="middle">
                <div class="text" onclick="location.href='./Register'" style="cursor: pointer">@LanguageController.Get(Model.lang, "Index", "CardRegisterTitle")</div>
            </div>
        </div>

        <div style="width: 50%; margin-left: 15px">
            <h4 class="card-title" style="font-family: Ubuntu Mono;">@LanguageController.Get(Model.lang, "Index", "CardRegisterTitle")</h4>
            <p class="card-text">
                @LanguageController.Get(Model.lang, "Index", "CardRegisterText")
            </p>
        </div>
    </div>

    <br /><br /><br /><br /><br />

    <!-- O nama -->
    <div class="text-center">
        <h3 class="card-title" style="font-family: Ubuntu Mono;">@LanguageController.Get(Model.lang, "Index", "HeadingWhoAreWe")</h3>
    </div>
    <div style="display: flex; justify-content: center;" id="scrolled1">
        <img src="~/lib/custom/team.png" id="imageAboutUs">
    </div>
    <br />
    <div style="display: flex; justify-content: center; text-align: center;">
        <p class="card-text" id="paragraphAboutUs">
            @LanguageController.Get(Model.lang, "Index", "WhoAreWeDescription")
        </p>
    </div>
    <br />
    <div style="display: flex; justify-content: center; text-align: center;">
        <button class="btn btn-primary" onclick="location.href='./ONama'" id="buttonLearnMore">@LanguageController.Get(Model.lang, "Index", "ButtonLearnMore")</button>
    </div>

    <br /><br />

    <!-- counters -->
    <div style="display: flex; flex-direction: row; justify-content: space-evenly; text-align: center; font-family: Ubuntu Mono;">

        <div style="position: relative; text-align: center;">
            <img src="~/lib/custom/counter_background.png" style="width: 100%" />
            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <h1 class="card-title" id="counterFrizeri"></h1>
                <h5 class="card-title" id="counterFrizeriLabel">@LanguageController.Get(Model.lang, "Index", "CounterLabelBarbers")</h5>
            </div>
        </div>

        <div style="position: relative; text-align: center;">
            <img src="~/lib/custom/counter_background.png" style="width: 100%" />
            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <h1 class="card-title" id="counterMusterije"></h1>
                <h5 class="card-title" id="counterMusterijeLabel">@LanguageController.Get(Model.lang, "Index", "CounterLabelCustomers")</h5>
            </div>
        </div>

        <div style="position: relative; text-align: center;">
            <img src="~/lib/custom/counter_background.png" style="width: 100%" />
            <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <h1 class="card-title" id="counterTermini"></h1>
                <h5 class="card-title" id="counterTerminiLabel">
                    @LanguageController.Get(Model.lang, "Index", "CounterLabelAppointments1")
                    <br />
                    @LanguageController.Get(Model.lang, "Index", "CounterLabelAppointments2")
                </h5>
            </div>
        </div>

    </div>

    <br /><br /><br /><br /><br /><br /><br /><br />

    <div id="mapDisplay">
        <div id="map" class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item"
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d725.6487184742932!2d21.905609043385912!3d43.3227395483263!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4755b0c7ffa0e9f5%3A0x8ec484b1e0918653!2z0JzQvtGYINGB0LDQu9C-0L0!5e0!3m2!1sen!2srs!4v1586879380998!5m2!1sen!2srs"></iframe>
        </div>

        <div id="contactUsTextDiv">
            <h4 class="card-title" style="font-family: Ubuntu Mono;">@LanguageController.Get(Model.lang, "Index", "ContactUsLabel")</h4>
            <div style="display: flex">
                <p class="card-text" id="contactUsText">
                    @LanguageController.Get(Model.lang, "Index", "ContactUsAddress") <i>Ćirila i Metodija 26, Niš 18105</i>
                    <br />
                    Email: <i>info@probcutapp.rs</i>
                    <br />
                    @LanguageController.Get(Model.lang, "Index", "ContactUsPhoneNumber") <i>018 123 456</i>
                </p>
            </div>            
        </div>
    </div>

    <br /><br /><br /><br />

    <script src="~/js/Index.js" type="module" asp-append-version="true"></script>
</body>