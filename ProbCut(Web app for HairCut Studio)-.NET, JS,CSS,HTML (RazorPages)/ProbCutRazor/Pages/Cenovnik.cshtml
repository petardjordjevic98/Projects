@page
@using ProbCut.Models;
@model CenovnikModel
@{
    ViewData["Title"] = LanguageController.Get(Model.lang, "Pricing", "Title");

    if (Model.cene == null)
        Model.cene = LanguageController.GetPricingData();
}

<link rel="stylesheet" href="~/css/Cenovnik.css" asp-append-version="true" />
<main id="MainCenovnik">
    <div id="pricingHeading">
        <h1 class="display-3 text-center">@LanguageController.Get(Model.lang, "Pricing", "HeadingTop")</h1>
        <h4 class="display-4 text-center">@LanguageController.Get(Model.lang, "Pricing", "HeadingBottom")</h4>
    </div>

    <div id="tableContainer">
        <table class="table table-striped table-bordered" id="pricingTable">
            <thead>
                <tr>
                    <th scope="col" style="width: 6%">#</th>
                    <th scope="col" style="width: 80%">@LanguageController.Get(Model.lang, "Pricing", "Service")</th>
                    <th scope="col" style="width: 14%">@LanguageController.Get(Model.lang, "Pricing", "Price")</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HaircutMen")</td>
                    <td class="cell-editable" id="HaircutMen">@Model.cene["HaircutMen"]</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HaircutWomen")</td>
                    <td class="cell-editable" id="HaircutWomen">@Model.cene["HaircutWomen"]</td>
                </tr>
                <tr>
                    <th scope="row">3</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HaircutChildren")</td>
                    <td class="cell-editable" id="HaircutChildren">@Model.cene["HaircutChildren"]</td>
                </tr>
                <tr>
                    <th scope="row">4</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "BeardTrim")</td>
                    <td class="cell-editable" id="BeardTrim">@Model.cene["BeardTrim"]</td>
                </tr>
                <tr>
                    <th scope="row">5</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "BeardLineUp")</td>
                    <td class="cell-editable" id="BeardLineUp">@Model.cene["BeardLineUp"]</td>
                </tr>
                <tr>
                    <th scope="row">6</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "LineUp")</td>
                    <td class="cell-editable" id="LineUp">@Model.cene["LineUp"]</td>
                </tr>
                <tr>
                    <th scope="row">7</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HairColoring")</td>
                    <td class="cell-editable" id="HairColoring">@Model.cene["HairColoring"]</td>
                </tr>
                <tr>
                    <th scope="row">8</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HairDrying")</td>
                    <td class="cell-editable" id="HairDrying">@Model.cene["HairDrying"]</td>
                </tr>
                <tr>
                    <th scope="row">9</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HairCurling")</td>
                    <td class="cell-editable" id="HairCurling">@Model.cene["HairCurling"]</td>
                </tr>
                <tr>
                    <th scope="row">10</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "HairShading")</td>
                    <td class="cell-editable" id="HairShading">@Model.cene["HairShading"]</td>
                </tr>
                <tr>
                    <th scope="row">11</th>
                    <td>@LanguageController.Get(Model.lang, "Pricing", "Eyebrows")</td>
                    <td class="cell-editable" id="Eyebrows">@Model.cene["Eyebrows"]</td>
                </tr>
            </tbody>
        </table>
    </div>
</main>

<script src="~/js/Cenovnik.js" type="module" asp-append-version="true"></script>